{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "./1-JavaScript/*.js",
    "./1-JavaScript/**/*.js",
    "1-JavaScript/*.js",
    "1-JavaScript/**/*.js"
  ],
  "rules": {
    "no-console": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off"
  }
}
